<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/item2_rep_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/user_profile_" />

    <!-- Username -->
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/item2_reservationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reservationId"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/item2_reservationItemId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reservationItemId"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            />

        <!-- reservationDate -->
        <TextView
            android:id="@+id/item2_reservationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reservationDate"
            android:textSize="15sp"
            android:layout_marginTop="5dp" />

        <!-- reservationTime -->
        <TextView
            android:id="@+id/item_reservationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reservationTime"
            android:textSize="15sp"
            android:layout_marginTop="5dp" />

        <!-- username -->
        <TextView
            android:id="@+id/item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="15sp"
            android:layout_marginTop="5dp" />

        <!-- phone -->
        <TextView
            android:id="@+id/item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone"
            android:textSize="15sp"
            android:layout_marginTop="5dp" />

        <!-- address -->
        <TextView
            android:id="@+id/item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address"
            android:textSize="15sp"
            android:layout_marginTop="5dp" />

        <!-- name -->
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="15sp"
            android:layout_marginTop="5dp" />

        <!-- price -->
        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textSize="15sp"
            android:layout_marginTop="5dp" />

        <!-- description -->
        <TextView
            android:id="@+id/item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:textSize="15sp"
            android:layout_marginTop="5dp" />

    </LinearLayout>




</LinearLayout>
